<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#171723">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#040404"
            android:text="BMI CALCULATOR"
            android:textStyle="bold"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#C8CBCD">

        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHIỀU CAO:"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#C8CBCD"/>
        <EditText
            android:id="@+id/edtheight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập chiều cao"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÂN NẶNG:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#C8CBCD"/>
        <EditText
            android:id="@+id/edtweight"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập cân nặng"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐỘ TUỔI:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#C8CBCD"/>
        <EditText
            android:id="@+id/edtage"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập độ tuổi"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btntinh"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Tính chỉ số BMI"
            android:textSize="20dp">

        </Button>
        <Button
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnreset"
            android:text="Nhập lại thông tin"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginLeft="5dp">

        </Button>

    </LinearLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ số BMI:"
            android:textSize="25dp"
            android:textColor="#C8CBCD"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/txtChiSo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold">
        </TextView>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#E63C06">
        </TextView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDanhGia"
            android:textStyle="bold"
            android:textSize="25dp">
        </TextView>
    </TableRow>


</LinearLayout>